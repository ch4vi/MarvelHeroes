<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterList">

    <fragment
        android:id="@+id/characterList"
        android:name="com.xavi.marvelheroes.ui.CharacterListFragment"
        tools:layout="@layout/fragment_character_list">

        <action
            android:id="@+id/action_to_character_detail"
            app:destination="@id/characterDetail" />
    </fragment>
    <fragment
        android:id="@+id/characterDetail"
        android:name="com.xavi.marvelheroes.ui.CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail" />
</navigation>